include totalE.in

wannier \
	innerWindow  -0.5 -0.04 \
	outerWindow  -1  1 \
        loadRotations yes \
	saveSpin yes \
	saveMomenta yes \
	phononSupercell 6 6 1 \
	polar yes

#defect-supercell svac66  6 6 1  ../defect-s-vac-66/jdftx/totalE.in 1.111111111111111e-01 5.555555555555555e-02 8.800733970000001e-02 0. 5. 2.  #Neutral defect

wannier-initial-state totalE.$VAR
